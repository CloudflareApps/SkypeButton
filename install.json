{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./skype-button.js"
      },
      {
        "type": "script",
        "contents": "SkypeButton.init(Eager.createElement(INSTALL_OPTIONS.container), INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "username": {
        "title": "Skype Name",
        "type": "string"
      },
      "functions": {
        "title": "Choose what you'd like your button to do",
