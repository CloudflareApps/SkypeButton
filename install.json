        "items": {
          "enum": [
            "Call",
            "Chat"
          ]
        }
      },
      "imageColor": {
        "title": "Color",
        "type": "string",
        "enum": [
          "blue",
          "white"
        ],
        "enumNames": {
          "blue": "Blue",
          "white": "White"
        },
        "default": "blue"
      },
      "imageSize": {
        "title": "Size",
        "type": "string",
        "enum": [
          "10px",
          "12px",
          "14px",
          "16px",
          "24px",
          "32px"
        ],
        "default": "32px"
      },
      "container": {
        "title": "Location where the button will appear",
        "type": "object",
        "format": "element"
      }
    }
  }
